<Window x:Class="MyStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Главная форма" Height="300" Width="300" WindowStartupLocation="CenterScreen">
        <Window.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="5 5 0 2" />
            </Style>
        </Window.Resources>
    <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <Button Name ="Orders_Button" Click="Orders_Click" >Заказы</Button>
                        <Button Click="Employees_Click">Сотрудники</Button>
                        <Button Click="Departaments_Click">Подразделения</Button>
            </StackPanel>
    </Grid>
</Window>